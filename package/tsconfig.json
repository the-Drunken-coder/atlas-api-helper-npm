{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "baseUrl": "."
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
